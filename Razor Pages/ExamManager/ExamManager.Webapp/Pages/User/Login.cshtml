@page
@model ExamManager.Webapp.Pages.User.LoginModel

<div class="d-sm-table" style="border-spacing: 0px 10px">
    <div>
        <h3>Login</h3>
    </div>

    <form method="post">
        <div class="d-sm-table-row">
            <div class="d-sm-table-cell"><span class="me-3 fw-bold">Benutzername</span></div>
            <div class="d-sm-table-cell">
                <input class="form-control" asp-for="Username" />
                <small><span class="text-danger" asp-validation-for="Username"></span></small>
            </div>
        </div>
        <div class="d-sm-table-row">
            <div class="d-sm-table-cell"><span class="me-3 fw-bold">Passwort</span></div>
            <div class="d-sm-table-cell">
                <input class="form-control" type="password" asp-for="Password" />
                <small><span class="text-danger" asp-validation-for="Password"></span></small>
            </div>
        </div>

        <div class="d-sm-table-row">
            <div class="d-sm-table-cell"></div>
            <div class="d-sm-table-cell">
                @if (Model.IsDevelopment)
                {
                        <small>Hinweis: Im Development Mode ist der User admin mit jedem Passwort mit mindestens 3 Stellen gültig.</small>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="mt-3">
                <span class="text-danger fw-bold">@Model.Message</span>
            </div>
        }

        <div class="mt-3">
            <button class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

